{{!-- Commented out for modal testing--}}

<div class="reveal" id="task-details" data-reveal>
    {{#each tasks as |task| }}
    <h4>{{title}}
    </h4>
    <h5>Created by: {{ taskCreator}}</h5>
    <p>{{ format_time task.startTime}} to {{ format_time task.endTime}}</p>
    <p>{{description}}</p>

    <div class="cell">
        <button class="hollow button success" data-open="task-details" href="#">Volunteer for this task!
        </button>
    </div>

{{#if createdTasks }}
    <div class="cell">
        <button class="hollow button secondary" data-open="task-details" href="#">Delete Task
        </button>
        <button class="hollow button secondary" data-open="task-details" href="#">Edit Task
        </button>
    </div>
{{/if}}

{{#if takenTasks}}
    <div class="cell">
        <button class="hollow button secondary" data-open="task-details" href="#">Cancel
        </button>
    </div>
{{/if}}
    <div class="cell">
        <p>Comment Section - to be added</p>
    </div>

    <div class="cell">
        <p>Add to calendar - optional</p>
    </div>

    <button class="close-button" data-close aria-label="Close modal" type="button">
        <span aria-hidden="true">&times;</span>
    </button>

    <div class="grid-x profile">
        <div class=" cell container">
            <form>
                <div class="form-group">
                    <textarea class="form-control status-box" rows="3"
                        placeholder="Enter your comment here..."></textarea>
                </div>
            </form>
            <div class="button-group pull-right" style="cursor: pointer;">
                <a class="btn btn-primary button secondary hollow">Post</a>
            </div>
            <ul class="posts">
            </ul>
        </div>
    </div>
    {{/each}}
</div>