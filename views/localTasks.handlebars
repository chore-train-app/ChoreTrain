{{#if logged_in}}
<div class="grid-x profile">
    <div class="cell ">
        <h3 class="custom-h3">All Available Tasks at ZIP</h3>
    </div>
</div>
{{!-- {{format_time task.startTime}} --}}
<div class="grid-x profile">
    <table class="unstriped">
        <thead>
            <tr>
                <th width="60%">
                    <h4 class="table-h4">Tasks</h4>
                </th>
                <th width="20%">
                    <h4 class="table-h4">When</h4>
                </th>
                <th width="20%">
                    <h4 class="table-h4">View Details</h4>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each tasks as |task|}}
            <tr>
                <td>
                    <p class="custom-p">{{this.name}}</p>
                </td>
                <td>
                    <p>{{format_time this.startTime}}</p>
                </td>
                <td><a href="#" class="button hollow secondary expanded table-button">Details</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{/if}}