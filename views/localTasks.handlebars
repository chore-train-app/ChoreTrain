{{#if logged_in}}
<div class="grid-x profile">
    <div class="cell ">
        
        <h3 class="custom-h3">All Available Tasks at {{#with tasks as |task|}}{{ task.zip_code }} {{/with}}</h3>
        
    </div>
</div>
{{!-- {{format_time task.startTime}} --}}
<div class="grid-x profile">
    <table class="unstriped">
        <thead>
            <tr>
                <th width="60%">
                    <h4 class="table-h4">Tasks</h4>
                </th>
                <th width="20%">
                    <h4 class="table-h4">When</h4>
                </th>
                <th width="20%">
                    <h4 class="table-h4">View Details</h4>
                </th>
            </tr>
        </thead>
        <tbody>
            {{#each tasks as |task|}}
            <tr>
                <td>
                    <p class="custom-p">{{this.name}}</p>
                </td>
                <td>
                    <p>{{format_time this.startTime}}</p>
                </td>
                <td><a data-open="my-task-details-{{this.id}}" href="#" class="button hollow secondary expanded table-button">View</a></td>
            </tr>
             <div class="reveal" id="my-task-details-{{this.id}}" data-reveal>
                  {{>taskDetails}}
                <button class="close-button" data-close aria-label="Close modal" type="button">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {{/each}}
            <script src="./js/homepage.js"></script>
        </tbody>
    </table>
</div>
{{/if}}